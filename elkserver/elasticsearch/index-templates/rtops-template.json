{
  "index_patterns": ["rtops-*"],
  "template": {
    "settings": {
      "index": {
        "number_of_shards": 1,
        "number_of_replicas": 0,
        "refresh_interval": "5s"
      }
    },
    "mappings": {
      "properties": {
        "@timestamp": { "type": "date" },
        "message": { "type": "text" },
        "infra": {
          "properties": {
            "log": {
              "properties": {
                "type": { "type": "keyword" },
                "subtype": { "type": "keyword" }
              }
            }
          }
        },
        "c2": {
          "properties": {
            "program": { "type": "keyword" },
            "operator": { "type": "keyword" },
            "teamserver": { "type": "keyword" },
            "log": {
              "properties": {
                "type": { "type": "keyword" }
              }
            }
          }
        },
        "beacon": {
          "properties": {
            "id": { "type": "keyword" },
            "status": { "type": "keyword" },
            "name": { "type": "keyword" },
            "hostname": { "type": "keyword" },
            "os": { "type": "keyword" },
            "user": { "type": "keyword" },
            "process": { "type": "keyword" },
            "pid": { "type": "integer" },
            "internal_ip": { "type": "ip" },
            "external_ip": { "type": "ip" },
            "sleep": { "type": "integer" },
            "jitter": { "type": "integer" },
            "last_checkin": { "type": "date" },
            "note": { "type": "text" }
          }
        },
        "command": {
          "properties": {
            "input": { "type": "text" },
            "output": { "type": "text" },
            "type": { "type": "keyword" }
          }
        },
        "file.path": { "type": "text" },
        "file.size": { "type": "long" },
        "file.hash.md5": { "type": "keyword" },
        "file.hash.sha256": { "type": "keyword" },
        "screenshot.title": { "type": "text" },
        "screenshot.user": { "type": "keyword" },
        "keystrokes.title": { "type": "text" },
        "keystrokes.data": { "type": "text" },
        "attack.technique": { "type": "keyword" },
        "attack.tactic": { "type": "keyword" },
        "scenario": { "type": "keyword" },
        "tags": { "type": "keyword" }
      }
    }
  }
}
