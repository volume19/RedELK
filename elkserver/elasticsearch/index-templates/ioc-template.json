{
  "index_patterns": ["ioc-*"] ,
  "template": {
    "settings": {
      "index": {
        "number_of_shards": 1,
        "number_of_replicas": 0,
        "refresh_interval": "5s"
      }
    },
    "mappings": {
      "properties": {
        "@timestamp": { "type": "date" },
        "indicator": {
          "properties": {
            "type": { "type": "keyword" },
            "value": { "type": "keyword" },
            "source": { "type": "keyword" },
            "confidence": { "type": "keyword" },
            "description": { "type": "text" }
          }
        },
        "tags": { "type": "keyword" },
        "c2.program": { "type": "keyword" },
        "source.ip": { "type": "ip" },
        "related.hash": { "type": "keyword" }
      }
    }
  }
}
